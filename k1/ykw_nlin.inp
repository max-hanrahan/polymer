# Initialization

variable  T           world   0.0065
variable  Tstart      world   0.0065
variable  Tfinish     world   0.0065
variable  filenum     world   50
variable  seed  world   341341

log 	        ykw-${T}.log

units		lj
dimension 	2
atom_style	atomic
boundary	p  p  p 
pair_style      yukawa  0.5 20


# System definition 

read_data       yukawa-heat.res

# Simulation settings

mass            1    1

timestep        0.00254558
pair_coeff      1    1    1 
 

# Run
thermo          100
thermo_style    custom step ke pe etotal press temp density

fix momfix all momentum 100 linear 1 1 1 

fix             1    all  nvt temp ${Tfinish}  ${Tfinish}  1.0

label runloop
variable runid loop 1 ${filenum} pad

reset_timestep  0

dump            1 all xyz 1 coords_${runid}.xyz
dump_modify     1 every v_s first yes

variable        s equal logfreq(1,1,2)
run             1048576

write_restart   restart_${runid}.res

undump          1
variable        s delete

next            runid
jump            SELF runloop




